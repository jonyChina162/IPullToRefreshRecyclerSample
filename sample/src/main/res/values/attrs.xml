<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RulingView">
        <attr name="ruling_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="ruling_item_value" format="integer" />
        <attr name="ruling_min" format="integer" />
        <attr name="ruling_max" format="integer" />
        <attr name="ruling_start_value" format="integer" />
        <attr name="ruling_line_color" format="color" />
        <attr name="ruling_value_int" format="boolean" />
        <attr name="ruling_pre_value_txt" format="reference" />
        <attr name="ruling_aft_value_txt" format="reference" />
    </declare-styleable>

    <declare-styleable name="ProgressCommonView">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="mainViewBackground" format="reference" />
        <attr name="mainViewText" format="reference" />
        <attr name="indeterminateDrawable" format="reference" />
        <attr name="mainViewWidth" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="mainViewHeight" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="progressGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RecyclerDivider">
        <attr name="dividerHeight" format="dimension" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="dividerDrawable" format="reference" />
    </declare-styleable>
</resources>